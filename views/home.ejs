<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1" name="viewport" />
  <title>MarkmyViews</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Montserrat|Ubuntu" rel="stylesheet" />

  <!-- CSS Stylesheets -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
  <link rel="stylesheet" href="css/home.css" />

  <!-- Font Awesome -->
  <script src="https://kit.fontawesome.com/11fe48ab2d.js" crossorigin="anonymous"></script>

  <!-- Bootstrap Scripts -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
  <script src="js/home.js"></script>
</head>

<body>
  <div id="loading">Loading&#8230;</div>
  <!-- alert div starts here -->
  <% if(count==1){%>
    <div class="alert_container" style="z-index: 3">
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%=message%>
        <button type="button" class="alert-close-btn" data-dismiss="alert" aria-label="Close" style="outline: none">
          &times;
        </button>
      </div>
    </div>
  <%}%>
  <!-- alert div ends here -->
  <div id="login_container">
    <div class="container_login">
      <div class="screen">
        <div class="screen__content">
          <a href="#" class="close" onclick="closeButtonHandler()"></a>
          <form class="login__" action="/login" method="post">
            <div class="login__field">
              <i class="login__icon fas fa-user"></i>
              <input type="text" class="login__input" placeholder="Username" name="Username" required />
            </div>
            <div class="login__field">
              <i class="login__icon fas fa-lock"></i>
              <input type="password" class="login__input" placeholder="Password" name="Password" required />
            </div>
            <button class="button login__submit" type="submit">
              <span class="button__text">Log In Now</span>
              <i class="button__icon fas fa-chevron-right"></i>
            </button>
            <button class="button login__submit" onclick="signUpHandler()">
              <span class="button__text">Sign Up Now</span>
              <i class="button__icon fas fa-chevron-right"></i>
            </button>
          </form>
        </div>
        <div class="screen__background">
          <span class="screen__background__shape screen__background__shape4"></span>
          <span class="screen__background__shape screen__background__shape3"></span>
          <span class="screen__background__shape screen__background__shape2"></span>
          <span class="screen__background__shape screen__background__shape1"></span>
        </div>
      </div>
    </div>
  </div>
  <section class="colored-section" id="title">
    <div class="container-fluid">
      <!-- Nav Bar -->

      <nav class="navbar navbar-expand-lg navbar-dark">
        <!-- <a class="navbar-brand" href="">${Book.review}</a> -->
        <a class="navbar-brand" href="/">MarkmyViews</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/category">Categories</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/books:general">Books</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#footer">Contact</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <% if(Username){%>
              <li class="nav-item">
                <div class="efecto"
                  style="background-image:url(https://ui-avatars.com/api/?uppercase=true&name=<%=Username%>&background=random&color=fff&rounded=true) !important;">
                </div>
              </li>
              <li class="nav-item">
                <a class="nav-link">
                  <form action="/logout" method="post">
                    <button class="logout" type="submit">Logout</button>
                  </form>
                </a>
              </li>
            <%}else{%>
              <li class="nav-item">
                <a class="nav-link" onclick="loginPageHandler()">
                  <div class="login">Login</div>
                </a>
              </li>
            <%}%>
          </ul>
        </div>
      </nav>

      <!-- Title -->

      <div class="row">
        <div class="col-lg-6">
          <h1 class="big-heading">
            Book is a gift which you can open again and again
          </h1>
          <!-- <button type="button" class="btn btn-dark btn-lg download-button"><i class="fa-solid fa-right-to-bracket"></i> Sign in</button>
      <button type="button" class="btn btn-outline-light btn-lg download-button"><i class="fa-solid fa-user-plus"></i> Sign up</button> -->
        </div>

        <div class="col-lg-6">
          <img class="title-image" src="images/newPic.jpg" alt="iphone-mockup"
            style="border: 1px solid transparent; border-radius: 50px" />
        </div>
      </div>
    </div>
  </section>

  <!-- Features -->

  <section class="white-section" id="features">
    <div class="container-fluid">
      <div class="row">
        <div class="feature-box col-lg-4">
          <i class="icon fas fa-check-circle fa-4x"></i>
          <h3 class="feature-title">Easy to use.</h3>
          <p>Save and optimize your time selecting the best books.</p>
        </div>

        <div class="feature-box col-lg-4">
          <i class="icon fas fa-layer-group fa-4x"></i>
          <h3 class="feature-title">Huge Collection</h3>
          <p>The best books? We have all of them.</p>
        </div>

        <div class="feature-box col-lg-4">
          <i class="icon fas fa-star-half-alt fa-4x"></i>
          <h3 class="feature-title">Guaranteed to work.</h3>
          <p>Find the book of your choice, reviewed.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials -->
  <!-- Recommended -->
  <section class="colored-section" id="testimonials">
    <div id="testimonial-carousel" class="carousel slide" data-ride="false">
      <div class="carousel-inner">
        <a class="carousel-item active container-fluid" href="/book:<%=Books[0][0].ISBN%>">
          <em>
            <%=Books[0][0].Title%>
          </em>
          <div class="carousel-item-container">
            <img class="testimonial-image" src="<%=Books[0][0].Image%>" alt="Image not found!" />
            <p style="color: white" class="testimonial-text">
              <%=Books[0][0].Description.substring(0, 500)%>....
            </p>
          </div>
        </a>
        <% for(var i=1; i< 4 ; i++) { %>
          <a class="carousel-item container-fluid" href="/book:<%=Books[0][i].ISBN%>">
            <em>
              <%=Books[0][i].Title%>
            </em>
            <div class="carousel-item-container">
              <img class="testimonial-image" src="<%=Books[0][i].Image%>" alt="Image not found!" />
              <p class="testimonial-text">
                <%=Books[0][i].Description.substring(0, 500)%>....%>
              </p>
            </div>
          </a>
        <% } %>
      </div>
      <a class="carousel-control-prev" href="#testimonial-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
      </a>
      <a class="carousel-control-next" href="#testimonial-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon"></span>
      </a>
    </div>
  </section>

  <!-- Pricing -->

  <section class="white-section" id="pricing">
    <h2 class="section-heading">Top Books</h2>
    <p>Best books recommendations for your Engineering journey.</p>
    <br />
    <div class="row" style="justify-content: baseline !important;">
      <% for(var i=5; i<Books[0].length; i++) { %>
        <div class="pricing-column col-lg-3 col-md-6" style="justify-content: baseline;align-items: center;">
          <a href="/book:<%=Books[0][i].ISBN%>" class="card mycard" style="width: 18rem">
            <img src="<%=Books[0][i].Image%>" class="card-img-top" alt="..."
              style="padding:1vh 1vw;margin:1vh 1vw;width: 240px;height: 300px;" />
            <div class="card-body">
              <h5 class="card-title">
                <%=Books[0][i].Title%>
              </h5>
              <p class="card-text">
                <%=Books[0][i].Description.substring(0, 100)%>...
              </p>
            </div>
          </a>
        </div>
      <% } %>
    </div>
    <br />
  </section>

  <!-- Call to Action -->

  <section class="colored-section" id="cta">
    <div class="container-fluid">
      <h3 class="big-heading">Find Your New Companion to Read Today.</h3>
      <!-- <button class="download-button btn btn-lg btn-dark" type="button"><i class="fa-solid fa-right-to-bracket"></i> Sign In</button>
  <button class="download-button btn btn-lg brn-light" type="button"><i class="fa-solid fa-user-plus"></i> Sign Up</button> -->
    </div>
  </section>

  <!-- Footer -->

  <footer class="white-section" id="footer">
    <div class="container-fluid">
      <i class="social-icon fab fa-facebook-f"></i>
      <i class="social-icon fab fa-twitter"></i>
      <i class="social-icon fab fa-instagram"></i>
      <i class="social-icon fas fa-envelope"></i>
      <!-- <p>&copy; Copyright 2022 ${Book.review}</p> -->
      <p>&copy; Copyright 2022.MarkmyViews</p>
    </div>
  </footer>
</body>

</html>